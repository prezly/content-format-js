{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5",

        "outDir": "./build",
        "rootDir": "./src"
    },
    "include": ["./src"]
}
